# Ejemplo de configuración para desarrollo LOCAL
# Copia este archivo a .env.local y ajusta los valores según tu entorno

# Application Configuration
NODE_ENV=development
PORT=3000
WEB_BASE_URL=http://localhost:3000
PASSWORD_RECOVERY_EXPIRATION=15min

# Database Configuration (PostgreSQL) - Para desarrollo local
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=TU_CONTRASEÑA_POSTGRES
DB_DATABASE=sistema_creditos_dev

# JWT Configuration
JWT_SECRET=tu_jwt_secreto_muy_seguro_aqui_cambiar_siempre
JWT_EXPIRES_IN=7d

# Configuración de logs y herramientas de desarrollo
LOKI_ENABLED=false
LOKI_HOST=http://localhost:3100
LOKI_SUFFIX_APP=local

# CORS Configuration (permitir frontend local)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4200

# Recaptcha Configuration (deshabilitado en desarrollo)
RECAPTCHA_ENABLED=false
RECAPTCHA_SECRET= secret_aqui

# Mail Configuration (para desarrollo local con Mailhog o MailDev)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=mailhog
MAIL_PASSWORD=mailhog
MAIL_FROM=no-reply@sistema-creditos-local.com
