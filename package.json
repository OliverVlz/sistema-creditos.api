{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.7.0"
  },
  "scripts": {
    "// ==================== BUILD & GENERAL ====================": "",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",

    "// ==================== DESARROLLO LOCAL ====================": "",
    "start": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "migration:run": "pnpm build && npx typeorm -d dist/db/data-source.js migration:run",
    "migration:revert": "pnpm build && npx typeorm -d dist/db/data-source.js migration:revert",
    "seed": "pnpm build && node dist/shared/commands/seed.command.js",

    "// ==================== DESARROLLO DOCKER ====================": "",
    "docker:up": "docker-compose up --build",
    "docker:start": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:seed": "docker-compose exec app pnpm seed",
    "docker:clean": "docker-compose down -v --rmi all",

    "// ==================== CONFIGURACIÃ“N DE ENTORNO ====================": "",
    "env:local": "powershell -Command \"Copy-Item 'example.env.local' '.env'\"",
    "env:docker": "powershell -Command \"Copy-Item 'example.env.docker' '.env'\"",

    "// ==================== BASE DE DATOS ====================": "",
    "db:setup": "powershell -ExecutionPolicy Bypass -File setup/setup-database.ps1",
    "db:create": "psql -U postgres -f setup/create-local-db.sql",

    "// ==================== TYPEORM ====================": "",
    "typeorm": "pnpm build && npx typeorm -d dist/db/data-source.js",
    "migration:create": "npx typeorm -d dist/db/data-source.js migration:create",
    "migration:generate": "npx typeorm -d dist/db/data-source.js migration:generate",

    "// ==================== TESTING ====================": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",

    "// ==================== UTILIDADES ====================": "",
    "start:prod": "node dist/main",
    "mail:dev": "parcel serve src/shared/mail/templates/development.html",
    "mail:up": "maildev --ip localhost"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/cqrs": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestlab/google-recaptcha": "^3.8.0",
    "@types/bcrypt": "^5.0.2",
    "@casl/ability": "^6.7.3",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^17.2.0",
    "form-data": "^4.0.3",
    "mongoose": "^8.6.1",
    "nest-winston": "^1.9.7",
    "nestjs-seeder": "^0.3.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "winston": "^3.14.2",
    "winston-loki": "^6.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^24.0.8",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^19.1.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.0.4",
    "maildev": "^2.1.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
